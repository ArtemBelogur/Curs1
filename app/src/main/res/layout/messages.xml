<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="7dp"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/main_layout">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:fontFamily="@font/raleway_medium"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="User"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/notification_logo"
                app:layout_constraintStart_toEndOf="@+id/notification_logo" />

            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_regular"
                android:textColor="#000"
                android:text="Time"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/notification_title"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/notification_logo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/other_notification_logo" />

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#000"
                android:fontFamily="@font/raleway_regular"
                android:layout_marginTop="12dp"
                android:text="Text of notification"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/notification_logo"
                app:layout_constraintTop_toBottomOf="@+id/notification_logo"
                app:layout_constraintVertical_bias="0.538" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>